<idea-plugin>
    <id>com.your.company.unique.plugin.id</id>
    <name>休息提示小助手</name>
    <version>1.1</version>
    <vendor email="1098832322@qq.com" url="http://wishes-blog.cn">Wishes丶</vendor>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <description><![CDATA[
    提供基金和股票的实时行情查看，支持港股美股
    韭菜专用摸鱼插件!<br>
    韭菜专用摸鱼插件!<br>
    韭菜专用摸鱼插件!<br>
        good luck!<br>
        使用说明：https://github.com/huage2580/leeks
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="service.AlertService"
                            serviceImplementation="service.impl.AlertServiceImpl"/>
        <applicationService serviceInterface="service.ScheduledService"
                            serviceImplementation="service.impl.ScheduledServiceImpl"/>
        <toolWindow anchor="left" id="leeks" factoryClass="FundWindow"/>
        <applicationConfigurable id="leeks_settings" instance="SettingsWindow"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>compontent.StartComponent</implementation-class>
        </component>
    </application-components>
    <actions>
        <!-- Add your actions here -->
        <action id="Assistant.Setting" class="action.SettingAction" text="Assistant Setting" description="休息提示小助手设置">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt c"/>
        </action>
        <action id="action.StopAction" class="action.StopAction" text="Assistant Stop" description="让小助手停止提示">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt s"/>
        </action>
    </actions>
</idea-plugin>